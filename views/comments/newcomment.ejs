<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width:30%;margin:0 auto">
        <h4 class="text-center">Add a new Comment to <%= campground.name %></h4>
        <form class="form-group" action="/campgrounds/<%= campground._id %>/comments" method="post">
            <div class="form-group">
                <input type="text" placeholder="Enter your Text" name="comment[text]" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Add</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id%>" class="btn btn-default" >Go Back</a>
        </div>
    </div>

</div>


<% include ../partials/footer %>
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width:30%;margin:0 auto">
        <h4 class="text-center">Edit Comment <%= comment.name %></h4>
        
        <form class="form-group" action="/campgrounds/<%=campgroundId%>/comment/<%=comment._id%>?_method=PUT" method="post">
            <div class="form-group">
                <input type="text" placeholder="Enter your Text" name="comment[text]" value="<%=comment.text%>" class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
        </form>
       
        </div>
    </div>

</div>



<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width:30%;margin:0 auto">
        <h4 class="text-center">Create a New Campground</h4>
        <form class="form-group" action="/campgrounds" method="post">
            <div class="form-group">
                <input type="text" placeholder="Enter the place" name="place" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="imageurl"  placeholder="image url" class="form-control">
            </div>
            <div class="form-group">
                 <textarea cols="25" rows="7" name="description" placeholder="Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Add</button>
            </div>
        </form>
        <a href="/campgrounds" class="btn btn-default" >Go Back</a>
        </div>
    </div>

</div>


<% include ../partials/footer %>
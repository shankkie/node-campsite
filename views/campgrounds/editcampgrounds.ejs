<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div style="width:30%;margin:0 auto">
        <h4 class="text-center">Edit <em><%=camp.name%></em></h4>
        <form class="form-group" action="/campgrounds/<%=camp._id%>?_method=PUT" method="post">
            <div class="form-group">
                <input type="text" name="campgrounds[name]"  value="<%=camp.name%>" class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="campgrounds[image]"  value="<%=camp.image%>" class="form-control">
            </div>
            <div class="form-group">
                 <textarea cols="25" rows="7" name="campgrounds[description]" class="form-control"><%=camp.description%></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Update</button>
            </div>
        </form>
        <a href="/campgrounds/<%=camp._id%>" class="btn btn-default" >Go Back</a>
        </div>
    </div>

</div>


<% include ../partials/footer %>